<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="repository"
            type="kirimin.me.whoongithub.common.models.RepositoryVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userInfoRepositoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:src="@{repository.iconImageResource}"/>

            <TextView
                android:id="@+id/userInfoRepositoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/text_large"
                android:text="@{repository.repositoryName}"/>

            <TextView
                android:id="@+id/userInfoRepositoryStarCount"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_star_grey600_24dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/text_large"
                android:text="@{repository.starCount}"/>

            <ImageView
                android:id="@+id/userInfoRepositoryBrowser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_public_grey600_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/userInfoRepositoryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/text_small"
            android:visibility="gone"
            android:text="@{repository.description}"/>

        <TextView
            android:id="@+id/userInfoRepositoryLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_green_700"
            android:textSize="@dimen/text_small"
            android:text="@{repository.language}"/>

    </LinearLayout>
</layout>